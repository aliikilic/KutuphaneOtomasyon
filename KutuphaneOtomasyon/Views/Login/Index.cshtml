@model UserForAuthenticationDto
<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Quixlab - Bootstrap Admin Dashboard Template by Themefisher.com</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <!-- <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous"> -->
    <link href="~/adminweb/css/style.css" rel="stylesheet">

</head>

<body class="h-100">
    @await Component.InvokeAsync("_PreloaderPartial")
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <a class="text-center"><h4>Giriş</h4></a>

                                <form class="mt-5 mb-5 login-input" method="post" asp-action="LoginUser" asp-controller="Login">
                                    <div class="form-group">
                                        <input type="email" class="form-control" asp-for="Email"  value="@Model.Email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                                    </div>
                                    <button class="btn login-form__btn submit w-100">Tamam</button>
                                </form>
                                <p class="mt-5 login-form__footer">Üyeliğiniz yok mu? Şimdi <a href="/Signup/index" class="text-primary">Üye Ol</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>
</body>
</html>





