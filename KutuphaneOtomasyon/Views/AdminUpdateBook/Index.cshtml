@model BookListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}


<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" asp-action="UpdateBook" asp-controller="AdminUpdateBook" method="post">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        Kitap Adı <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" readonly class="form-control" value="@Model.Name" asp-for="Name" placeholder="@Model.Name">
                                        <input type="text" hidden class="form-control" value="@Model.BookID" asp-for="BookID"/>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Yazar <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" readonly class="form-control" value="@Model.WriterName" placeholder="@Model.WriterName">
                                        <input type="text" hidden class="form-control" value="@Model.WriterId" asp-for="WriterId">

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Yayın Evi <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" readonly class="form-control" value="@Model.PublisherName" placeholder="@Model.PublisherName">
                                        <input type="text" hidden readonly class="form-control" value="@Model.PublisherId" asp-for="PublisherId">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Tür <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" readonly class="form-control" value="@Model.TypeName"asp-for="TypeName" placeholder="@Model.TypeName">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-digits">
                                        Stok <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-digits"  placeholder="Stok" asp-for="Stock">
                                        <input type="text" hidden class="form-control" id="val-digits" value="@Model.InitialStock" name="val-digits" placeholder="Stok" asp-for="Stock">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Durum <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">

                                        @* <input type="checkbox" class="form-check-input" value="true" @(Model.isActive ? "checked" : "")/> *@

                                        @if (Model.isActive == true)
                                        {
                                            <input type="checkbox" checked class="form-check-input" asp-for="isActive" placeholder=@(Model.isActive ? "AKTİF": "PASİF")>

                                        }
                                        else
                                        {
                                            <input type="checkbox" class="form-check-input" asp-for="isActive" placeholder=@(Model.isActive ? "AKTİF": "PASİF")>
                                        }
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Değişkliği Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


